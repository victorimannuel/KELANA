<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation_graph_home"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.kelana.UI.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detailFragment2"
            app:destination="@id/detailFragment" />
    </fragment>
    <fragment
        android:id="@+id/detailFragment"
        android:name="com.example.kelana.UI.Detail.DetailFragment"
        android:label="fragment_detail"
        tools:layout="@layout/fragment_detail" >
        <argument
            android:name="idDestinasi"
            app:argType="string" />
        <action
            android:id="@+id/action_detailFragment_to_peraturanFragment"
            app:destination="@id/peraturanFragment" />
        <action
            android:id="@+id/action_detailFragment_to_reviewFragment"
            app:destination="@id/reviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/peraturanFragment"
        android:name="com.example.kelana.UI.Detail.PeraturanFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" >
        <action
            android:id="@+id/action_peraturanFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_peraturanFragment_to_reviewFragment"
            app:destination="@id/reviewFragment" />
    </fragment>
    <fragment
        android:id="@+id/reviewFragment"
        android:name="com.example.kelana.UI.Detail.ReviewFragment"
        android:label="fragment_review"
        tools:layout="@layout/fragment_review" >
        <action
            android:id="@+id/action_reviewFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
        <action
            android:id="@+id/action_reviewFragment_to_peraturanFragment"
            app:destination="@id/peraturanFragment" />
    </fragment>
    <fragment
        android:id="@+id/bottomSheetKategoriFragment"
        android:name="com.example.kelana.UI.BottomSheet.BottomSheetKategoriFragment"
        android:label="BottomSheetKategoriFragment" >
        <action
            android:id="@+id/action_bottomSheetKategoriFragment_to_detailFragment"
            app:destination="@id/detailFragment" />
    </fragment>
</navigation>